<!doctype html>
<html class="no-js" lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <%- include('partials/head.ejs', { data: { title: 'Issues' }}) %>
</head>

<body>

  <div class="wrapper">

    <%- include('partials/header.ejs', { data: { state: 'issues' }}) %>

    <section class="text-center">
      <div style="padding: 50px 20px 40px; background: rgba(0,44,119,0.9);">
        <h3 class="text-white title-font">Get to know the movement<br>and what YOU can do for our country</h3>
      </div>
    </section>

    <section class="section-margin ptb-80">
      <div class="container">
        <component>
          <div class="row justify-content-md-center" v-if="items.length < 1">
            <div class="loader"></div>
          </div>
          <div class="row justify-content-md-center">
            <div v-for="item in items" class="col-sm-3 col-xs-6">
              <a :href="item.link" :title="item.title" v-text="item.title"></a>
              <h1 v-text="item.title"></h1>
              <img :src="item.image"/>
            </div>
          </div>
        </component>
      </div>
    </section>

    <%- include('partials/footer.ejs') %>

  </div>

  <%- include('partials/scripts.ejs') %>

</body>

</html>
