<!doctype html>
<html class="no-js" lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <%- include('partials/head.ejs', { data: { title: 'Contact us' }}) %>
</head>

<body>

  <div class="wrapper">

    <%- include('partials/header.ejs', { data: { state: 'contact' }}) %>

    <section class="bg-faded py-5">
      <div class="container pt-5">
        <div class="row">
          <div class="col-md-12 text-center">
            <div class="what-top meet">
              <div class="section-title">
                <h1 class="title-font">Contact Us</h1>
                <div class="what-icon">
                  <i class="fa fa-envelope" aria-hidden="true"></i>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="row justify-content-md-center mb-5 pb-5">
          <div class="col-12 col-md-6">
            <form>
              <div class="form-group row">
                <label for="nameInput" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" id="nameInput" placeholder="Name">
                </div>
              </div>
              <div class="form-group row">
                <label for="emailInput" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                  <input type="email" class="form-control" id="emailInput" placeholder="email@example.com">
                </div>
              </div>
              <div class="form-group row">
                <label for="telInput" class="col-sm-2 col-form-label">Tel</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" id="telInput" placeholder="(555) 951-6532">
                </div>
              </div>
              <div class="form-group row">
                <label for="messageInput" class="col-sm-2 col-form-label">Message</label>
                <div class="col-sm-10">
                  <textarea class="form-control" id="messageInput" rows=6></textarea>
                </div>
              </div>
              <div class="form-group row">
                <div class="offset-sm-2 col-sm-10">
                  <button type="submit" class="btn btn-primary">Send message</button>
                </div>
              </div>
            </form>
          </div>
        </div>

      </div>
    </section>

    <%- include('partials/footer.ejs') %>
  </div>

  <%- include('partials/scripts.ejs') %>

</body>

</html>
